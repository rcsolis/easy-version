{
    "name": "easy-version",
    "version": "0.0.0-development",
    "description": "Middleware for API Versioning using content negotiation and media types",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "lint": "eslint --fix",
        "coverage": "jest src/ --coverage",
        "test": "echo \"Testing\" && jest src/",
        "build": "babel src/index.js -d dist",
        "semantic-release": "semantic-release --branches main",
        "commit": "git-cz"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rcsolis/easy-version.git"
    },
    "keywords": [
        "API",
        "Version",
        "versioning",
        "Express",
        "API",
        "REST",
        "version",
        "control",
        "version",
        "media",
        "type",
        "content",
        "negotiation"
    ],
    "author": "Rafael Chavez Solis <rafaelchavezsolis@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/rcsolis/easy-version/issues"
    },
    "homepage": "https://github.com/rcsolis/easy-version#readme",
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.19.3",
        "@babel/preset-env": "^7.19.3",
        "@semantic-release/git": "^10.0.1",
        "babel-preset-minify": "^0.5.2",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.3.0",
        "eslint-plugin-promise": "^6.0.1",
        "jest": "^29.1.2",
        "semantic-release": "^19.0.5"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "release": {
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            [
                "@semantic-release/git",
                {
                    "assets": [
                        "dist/**/*.{js,css}",
                        "CHANGELOG.md",
                        "README.md",
                        "LICENSE",
                        "package.json"
                    ]
                }
            ],
            [
                "@semantic-release/github",
                {
                    "assets": [
                        {
                            "path": "dist/**/*.{js,css}",
                            "label": "Distribution files"
                        },
                        "CHANGELOG.md",
                        "README.md",
                        "LICENSE",
                        "package.json"
                    ]
                }
            ],
            [
                "@semantic-release/npm",
                {
                    "pkgRoot": "./dist/"
                }
            ]
        ]
    }
}
